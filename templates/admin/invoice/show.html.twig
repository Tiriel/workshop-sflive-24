{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <div class="example-wrapper">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ invoice.status }}</td>
            </tr>
            <tr>
                <th>Movie</th>
                <td>{{ invoice.movie.title }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ invoice.user.id }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_invoice_index') }}" class="btn btn-primary">back to list</a>

    {% if 'is_refund_accepted' in invoice.status %}
        <a href="{{ path('app_admin_invoice_accept_refund', {'id': invoice.id}) }}" class="btn btn-danger">edit</a>
    {% endif %}

    {{ include('admin/invoice/_delete_form.html.twig') }}
</div>
{% endblock %}
