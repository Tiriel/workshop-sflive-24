{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <section class="w-50 m-auto">
        <h1>User</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>LastConnectedAt</th>
                <td>{{ user.lastConnectedAt ? user.lastConnectedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_user_index') }}" class="btn btn-outline-primary">back to list</a>

        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-warning">edit</a>

        {{ include('admin/user/_delete_form.html.twig') }}
    </section>
{% endblock %}
