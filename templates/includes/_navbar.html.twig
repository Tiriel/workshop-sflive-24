{% from 'includes/_macro.html.twig' import nav_link %}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_main_index') }}">Sensio TV+</a>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            {{ nav_link(app.current_route, 'app_main_index', 'Home') }}
            {{ nav_link(app.current_route, 'app_movie_index', 'Movie') }}
            {{ nav_link(app.current_route, 'app_main_contact', 'Contact') }}
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            {% if app.user is not null %}
                {% if is_granted('ROLE_ADMIN') %}
                    {{ nav_link(app.current_route, 'app_admin_main_index', 'Administration') }}
                {% endif %}
                {{ nav_link(app.current_route, 'app_security_logout', 'Logout') }}
            {% else %}
                {{ nav_link(app.current_route, 'app_security_login', 'Login') }}
                {{ nav_link(app.current_route, 'app_security_register', 'Register') }}
            {% endif %}
        </ul>
    </div>
</nav>
